coscale_plugins:
    mysql:
        #
        # 1. Performance monitoring of database queries
        # Uncomment one of the following:

        # Performance schema
        #query_stats: "true"
        #query_type: "PERFORMANCE SCHEMA"

        # Slow log
        query_stats: "true"
        query_type: "SLOW QUERY"
        file: '\"/var/log/mysql/slow.log\"'

        # Query data disabled
        #query_stats: "false"


        #
        # 2. Monitoring of global metrics
        # Uncomment one of the following:

        # Host / port
        hostname: "localhost"
        port: "3306"

        # Unix socket
        #unix_socket: "/var/run/mysqld/mysqld.sock",

        #
        # 3. Required configuration
        #
        username: "root"
        password: "root"
        database: "foodb"

    postgresql:
            #
            # 1. Performance monitoring of database queries
            # Uncomment one of the following:

            # Slow log
            query_stats: "true"
            query_file: '\"/var/lib/postgresql/9.1/main/pg_log/postgresql-%a.log\"'
            query_log_statement: "all"
            query_log_duration: "-1"
            query_log_format: '\"%m %u@%d %p %r %e \"'

            # Query data disabled
            #query_stats: "false"


            #
            # 2. Monitoring of global metrics
            # Uncomment one of the following:

            # Enabled:
            global_stats: "true"

            # Disabled:
            #query_stats: "false"


            #
            # 3. Required configuration
            # Host / port
            username: "root"
